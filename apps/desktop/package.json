{
  "name": "@multichat/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"tsc -p tsconfig.main.json --watch --preserveWatchOutput\" \"electron dist/main/main.js\"",
    "build": "pnpm run build:renderer && pnpm run build:main && pnpm run package",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "electron-builder --config electron-builder.yml",
    "package:mac": "electron-builder --config electron-builder.yml --mac dmg",
    "package:win": "electron-builder --config electron-builder.yml --win nsis",
    "test": "node ../../scripts/smoke-test.mjs",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check \"src/**/*.{ts,tsx,css,html}\""
  },
  "dependencies": {
    "@multichat/chat-core": "workspace:*",
    "electron-updater": "^6.3.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.4"
  }
}
